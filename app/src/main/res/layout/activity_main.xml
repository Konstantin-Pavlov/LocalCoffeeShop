<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_ImageView"
    android:orientation="vertical"
    tools:context="com.example.android.localcoffeeshop.MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_height"
        android:layout_weight="2"
        android:scaleType="centerCrop"
        android:src="@drawable/way_cup" />

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_height"
        android:layout_weight="1"
        android:background="@color/background_LinearLayout_new"
        android:orientation="vertical">

        <TextView
            android:id="@+id/business_name"
            android:text="@string/waycup"
            style="@style/Title" />

        <TextView
            android:id="@+id/website"
            android:autoLink="web"
            android:text="@string/website"
            style="@style/NumberAndWeb" />

        <TextView
            android:id="@+id/phone"
            android:autoLink="phone"
            android:text="@string/number"
            style="@style/NumberAndWeb" />

        <TextView
            android:id="@+id/address"
            android:autoLink="map"
            android:text="@string/address"
            style="@style/Address" />

    </LinearLayout>
</LinearLayout>


