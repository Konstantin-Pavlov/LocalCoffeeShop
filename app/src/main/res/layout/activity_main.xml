<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_ImageView"
    android:orientation="vertical"
    tools:context="com.example.android.localcoffeeshop.MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_height"
        android:layout_weight="2"
        android:scaleType="centerCrop"
        android:src="@drawable/way_cup" />

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_height"
        android:layout_weight="1"
        android:background="@color/background_LinearLayout_new"
        android:orientation="vertical">

        <TextView
            android:id="@+id/business_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/padding"
            android:text="@string/waycup"
            android:textAllCaps="true"
            android:textColor="@color/textColor"
            android:textSize="@dimen/text_size_24" />

        <TextView
            android:id="@+id/website"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autoLink="web"
            android:gravity="center"
            android:padding="@dimen/padding"
            android:text="@string/website"
            android:textColor="@color/textColor"
            android:textColorLink="@color/textColor"
            android:textSize="@dimen/text_size_20" />

        <TextView
            android:id="@+id/phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autoLink="phone"
            android:gravity="center"
            android:padding="@dimen/padding"
            android:text="@string/number"
            android:textColor="@color/textColor"
            android:textColorLink="@color/textColor"
            android:textSize="@dimen/text_size_20" />

        <TextView
            android:id="@+id/address"
            android:autoLink="map"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/padding"
            android:text="@string/address"
            android:textColor="@color/textColor"
            android:textSize="@dimen/text_size_16" />

    </LinearLayout>
</LinearLayout>


